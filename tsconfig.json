{
	"compilerOptions": {
		"types": ["node"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"lib": ["ES2022"],
		"noUnusedLocals": true,
		"noEmitOnError": false,
		"noErrorTruncation": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"target": "ES2022",
		"module": "CommonJS",
		"outDir": "dist",
		"rootDir": "."
	},
	"exclude": ["node_modules", "dist"]
}
